    "type": "project",
    "keywords": ["game", "cli", "console", "cold-hot", "guess-number"],
    "homepage": "https://github.com/Relflly/cold-hot",
    "license": "MIT",
    "authors": [
        {
            "name": "Ganchenkov AA",
            "email": "ganchenkov@example.com"
        }
    ],
    "require": {
        "php": ">=8.0",
        "ext-pdo": "*",
        "ext-pdo_sqlite": "*",
        "wp-cli/php-cli-tools": "^0.11"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "files": [
            "src/Controller.php",
            "src/View.php",
            "src/Model.php",
